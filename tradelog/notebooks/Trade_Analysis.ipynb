    df["side"] == "BUY",
    (df["exit_price"] - df["entry_price"]) / (df["entry_price"] - df["stop_loss"]),
    (df["entry_price"] - df["exit_price"]) / (df["stop_loss"] - df["entry_price"])
)
# Avoid div-by-zero or invalid
